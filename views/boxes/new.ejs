<h1>Create New Box</h1>
<p><%= user._id%></p>
<form action="/users/<%= user._id%>/boxes" method="POST">
    <div class="form-group">
      <label for="identNum">Box Number</label>
      <input type="number" class="form-control" id="identNum" name="identNum" min='<%=maxBoxNum + 1%>' value='<%=maxBoxNum +1 %>'/>

      <label for="desc">Description</label>
      <input type="text" class="form-control" id="desc" name="desc"/>

      <label for="category">Category</label>
      <input type="text" class="form-control" id="category" name="category"/>

    </div>
    <p>Max Box <%=maxBoxNum%></p>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>