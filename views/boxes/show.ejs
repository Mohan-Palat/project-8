<div class="default-background">
  <div class="container">
    <div class="row">
      <div class="col s12 m7">
        <div class="card z-depth-3 brown lighten-4">
          <div class="card-image">
            <img src="/images/<%=category.imageFile%>">
          </div>
          <div class="card-content">
            <div class="card-content">
              <span class="card-title">Box <%=box.identNum%>: <%=box.category%></span>
              <p>Contents: <%=box.desc%></p>
            </div>
          </div>
          
          <div class="card-action">
            <form class="button-inline" action="/users/<%=user._id%>/boxes/<%=box._id%>/edit" method="GET">
              <button class="btn waves-effect waves-light blue lighten-1" type="submit" name="action">Edit Box</button>
            </form>
            <form class="button-inline" action="/users/<%=user._id%>/boxes/<%=box._id%>?_method=DELETE" method="POST">
              <button class="btn waves-effect waves-light red darken-1" type="submit" name="action">Delete Box</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>







 